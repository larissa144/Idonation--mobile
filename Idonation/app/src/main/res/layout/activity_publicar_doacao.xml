<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PublicarDoacao"
    android:background="@color/BackgroundColor"
    >

    <ImageView
        android:layout_width="200dp"
        android:layout_height="130dp"
        android:id="@+id/imgheart2"
        android:src="@drawable/logo_core"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtPublicarDoacao"
        app:layout_constraintTop_toBottomOf="@id/imgheart2"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="@string/name_publicar_doacao"
        android:textSize="25sp"
        android:layout_marginTop="135dp"
        />

    <View
        android:layout_width="380dp"
        android:layout_height="490dp"
        android:id="@+id/cardFundo"
        android:background="@drawable/card_login"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="190dp"
        />

    <TextView
        android:id="@+id/txtDestinado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/name_destinado"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@id/txtPublicarDoacao"
        app:layout_constraintLeft_toRightOf="@id/txtPublicarDoacao"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="55dp"
        android:layout_marginLeft="20dp"
        />

    <Spinner
        android:id="@+id/mockDestinados"
        android:layout_width="350dp"
        android:layout_height="45dp"
        android:layout_marginTop="255dp"
        android:alpha="0.4"
        android:entries="@array/name_mockDestinados"
        app:layout_constraintHorizontal_bias="0.300"
        app:layout_constraintLeft_toRightOf="@id/txtDestinado"
        app:layout_constraintTop_toBottomOf="@id/txtDestinado"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        style="@style/Spinner"
        />

    <TextView
        android:id="@+id/txtDoacoes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/name_ItensDoados"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@id/mockDestinados"
        app:layout_constraintLeft_toRightOf="@id/mockDestinados"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp"
        />

    <Spinner
        android:id="@+id/mockDoacoes"
        android:layout_width="350dp"
        android:layout_height="45dp"
        android:layout_marginTop="360dp"
        android:alpha="0.4"
        android:entries="@array/name_mockDoacoes"
        app:layout_constraintHorizontal_bias="0.300"
        app:layout_constraintLeft_toRightOf="@id/txtDoacoes"
        app:layout_constraintTop_toBottomOf="@id/txtDoacoes"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        style="@style/Spinner"
        />

    <TextView
        android:id="@+id/txtOqDoar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/name_oqDOar"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@id/txtDoacoes"
        app:layout_constraintLeft_toRightOf="@id/txtDoacoes"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="80dp"
        android:layout_marginLeft="20dp"
        />

    <EditText
        android:id="@+id/etDesc"
        android:layout_width="369dp"
        android:layout_height="wrap_content"
        android:background="@drawable/descricao"
        app:layout_constraintTop_toBottomOf="@id/txtOqDoar"
        app:layout_constraintLeft_toRightOf="@id/txtOqDoar"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        />

    <Button
        android:id="@+id/btnFinalizar"
        android:layout_width="160dp"
        android:layout_height="40dp"
        android:background="@drawable/btn_entrar_login"
        app:layout_constraintTop_toBottomOf="@id/etDesc"
        app:layout_constraintLeft_toRightOf="@id/etDesc"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="45dp"
        android:layout_marginLeft="25dp"
        android:text="Finalizar"
        android:textColor="@color/colorWhite"
        android:textSize="15sp"
        android:onClick="irTelaOutros"
        />
    <Button
        android:id="@+id/btnCancelar"
        android:layout_width="160dp"
        android:layout_height="40dp"
        android:background="@drawable/btn_entrar_login"
        app:layout_constraintTop_toBottomOf="@id/etDesc"
        app:layout_constraintLeft_toRightOf="@id/etDesc"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="45dp"
        android:layout_marginLeft="225dp"
        android:text="Cancelar"
        android:textColor="@color/colorWhite"
        android:textSize="15sp"
        android:onClick="voltarHomeDoador"
        />

</androidx.constraintlayout.widget.ConstraintLayout>