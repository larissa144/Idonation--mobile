<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TipoDoacao"
    android:background="#E1EC5BAB"
    >

    <ImageView
        android:layout_width="276dp"
        android:layout_height="176dp"
        android:id="@+id/imgCoreTpDoacao"
        android:src="@drawable/logo_core"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="40dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="220dp"
        android:textSize="30sp"
        android:textColor="@color/colorWhite"
        android:text="@string/name_doar"
        android:id="@+id/txtVamosDoar"
        />

    <Button
        android:layout_width="276dp"
        android:layout_height="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txtVamosDoar"
        android:layout_marginTop="60dp"
        android:text="@string/name_fazerdoacao"
        android:textSize="15sp"
        android:id="@+id/btnFazerDoacao"
        android:background="@drawable/botao_config"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="2sp"
        app:layout_constraintTop_toBottomOf="@id/btnFazerDoacao"
        android:background="@drawable/linha"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="430dp"

        />
    <Button
        android:layout_width="276dp"
        android:layout_height="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnFazerDoacao"
        android:layout_marginTop="140dp"
        android:text="@string/name_fazerdoacao"
        android:textSize="15sp"
        android:id="@+id/btnPubliDoacao"
        android:background="@drawable/botao_config"
        />

</androidx.constraintlayout.widget.ConstraintLayout>