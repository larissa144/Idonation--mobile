<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".doacoes_de_interesse">

    <EditText
        android:layout_width="412dp"
        android:layout_height="70dp"
        android:background="@drawable/barra_superior_menu"
        android:id="@+id/barra_menu_superior"
        />

    <ImageView
        android:layout_width="110dp"
        android:layout_height="90dp"
        android:id="@+id/imgMenu"
        android:src="@drawable/idonation_white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:ignore="MissingConstraints" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Doações de interesse : "
        app:layout_constraintTop_toBottomOf="@id/imgMenu"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/textDoacoesInteresse"
        android:textSize="20sp"
        android:textColor="#E91E63"
        android:layout_marginTop="10dp"
        android:layout_marginRight="150dp"
        tools:ignore="DuplicateIds" />

    <ImageView
        android:layout_width="410dp"
        android:layout_height="176dp"
        android:id="@+id/cadDoacoesInteresse1"
        android:src="@drawable/cad_doacoes_interesse"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="130dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Doador:  "
        app:layout_constraintTop_toBottomOf="@id/textDoacoesInteresse"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/textDoador1"
        android:textSize="17sp"
        android:textColor="#FFFFFF"
        android:layout_marginTop="40dp"
        android:layout_marginRight="300dp"
        tools:ignore="DuplicateIds" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/name_doador"
        app:layout_constraintTop_toBottomOf="@id/textDoacoesInteresse"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/textDoador2"
        android:textSize="18sp"
        android:textColor="#FFFFFF"
        android:layout_marginTop="40dp"
        android:layout_marginRight="130dp"
        tools:ignore="DuplicateIds" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Doação:  "
        app:layout_constraintTop_toBottomOf="@id/textDoacoesInteresse"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/textDoador3"
        android:textSize="17sp"
        android:textColor="#FFFFFF"
        android:layout_marginTop="90dp"
        android:layout_marginRight="300dp"
        tools:ignore="DuplicateIds" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/name_doacao"
        app:layout_constraintTop_toBottomOf="@id/textDoador2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/textDoador4"
        android:textSize="18sp"
        android:textColor="#FFFFFF"
        android:layout_marginTop="28dp"
        android:layout_marginRight="130dp"
        tools:ignore="DuplicateIds" />

    <Button
        android:layout_width="165dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="120dp"
        android:textSize="14sp"
        android:layout_marginLeft="240dp"
        android:text="@string/name_btn_remover_curtida"
        android:textColor="@color/colorWhite"
        android:background="@drawable/btn_border_radius"
        app:layout_constraintTop_toTopOf="@id/textDoacoesInteresse"
        app:layout_constraintLeft_toLeftOf="@id/cadDoacoesInteresse1"
        />


    <EditText
        android:layout_width="412dp"
        android:layout_height="70dp"
        android:background="@drawable/barra_superior_menu"
        android:id="@+id/barra_inferior_menu"
        app:layout_constraintTop_toTopOf="@id/cadDoacoesInteresse1"
        android:layout_marginTop="531dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>